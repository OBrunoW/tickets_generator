<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:backgroundTint="@color/night"
        app:tabTextColor="@color/white"
        app:tabTextAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:tabSelectedTextColor="@color/icon"
        app:tabIndicatorColor="@color/icon"
        app:tabIconTint="@color/white"
        app:tabInlineLabel="true"
        app:tabIndicatorAnimationMode="linear"
        app:tabIndicatorAnimationDuration="@integer/material_motion_duration_long_1"
        app:tabIndicatorHeight="4dp"
        app:tabPadding="18dp"
        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>