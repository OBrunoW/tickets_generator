<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Senha"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="10dp" />

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pin_circle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/pin_circle_void" />

            <ImageView
                android:id="@+id/pin_circle_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/pin_circle_void" />

            <ImageView
                android:id="@+id/pin_circle_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/pin_circle_void" />

            <ImageView
                android:id="@+id/pin_circle_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/pin_circle_void" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/matrix_pin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingVertical="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_button_1"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="1"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_2"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="2"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_3"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="3"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_button_4"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="4"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_5"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="5"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_6"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="6"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_button_7"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="7"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_8"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="8"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_9"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="9"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_0"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:text="0"
                    android:textColor="@color/camaleao_yellow"
                    android:textSize="20sp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/pin_button_back_space"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="72dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    app:strokeColor="@color/material_on_surface_stroke"
                    android:text="⌫"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>